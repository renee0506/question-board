{{#if updateQuestionFormShow}}
<div class="form-div">
  <h2>Update "{{question.title}}"</h2>
  <form class="form-group">
    <label for="title">Question</label>
    {{input value=title placeholder=question.title class='form-control'}}<br>
    <label for="author">Your Nickname</label>
    {{input value=author placeholder=question.author class='form-control'}}<br>
    <label for="note">Content</label>
    {{textarea value=content placeholder=question.note class='form-control' rows="18" cols="50"}}<br>
    <button {{action 'update' question}} class="btn btn-default">Save</button>
    <button {{action 'hideUpdateQuestionForm'}} class="btn btn-default">Cancel</button>
  </form>
</div>
{{else}}
  <button {{action 'showUpdateQuestionForm'}} class="btn btn-default btn-sm">Update This Question</button>
{{/if}}
