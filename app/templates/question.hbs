<div class="col-md-8 question-content">
  <h2>{{model.title}}</h2>
  <h4>{{model.author}}</h4>
  <p>{{model.note}}</p>
  {{update-question question=model update="update"}}
<hr>
  <h4>Answers</h4>
  <ul class="list-unstyled">
    {{#each model.answers as |answer|}}
    <li>
      {{answer-tile answer=answer upvote='upvote'}}
    </li>
    {{/each}}
  </ul>

  {{new-answer question=model saveAnswer="saveAnswer"}}
</div>
